@using System.Web.Http
@using System.Web.Http.Controllers
@using System.Web.Http.Description
@using System.Collections.ObjectModel
@using MakingChoises.WebApi.Areas.Stories.Models
@using MakingChoises.ReadModel

@model IEnumerable<StoriesByGenre>

@{
    ViewBag.Title = "ASP.NET Web API Help Page";
}

<header>
    <div class="content-wrapper">
        <div class="float-left">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</header>
<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <h2>Stories</h2>
            <p>
                Here's a list of the stories.
            </p>
        </div>
    </section>
    <section class="content-wrapper main-content clear-fix">
        @foreach (var storiesByGenre in Model)
        {
            foreach (var storyName in storiesByGenre.Stories)
            {
                <br/>
                @Html.ActionLink(storyName, "Read", new { id = storyName })
            }
        }
    </section>
</div>

@section Scripts {
    <link type="text/css" href="~/Areas/HelpPage/HelpPage.css" rel="stylesheet" />
}